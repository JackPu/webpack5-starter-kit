{
  "name": "webpack4-starter-kit",
  "version": "1.0.1",
  "description": "Webpack 4 starter kit",
  "main": "./src/index.js",
  "scripts": {
    "postinstall": "yarn run build",
    "dev": "node ./config/dev",
    "build": "node ./config/prod",
    "lint": "eslint ./src",
    "flow": "flow",
    "test": "nyc ava",
    "httpserver": "http-server ./dist -p 8082 --silent"
  },
  "author": "Giorgio Gamberoni <giorgio.gamberoni@gmail.com> (https://github.com/king-prawns)",
  "license": "MIT",
  "homepage": "https://github.com/king-prawns/webpack4-starter-kit#readme",
  "ava": {
    "files": [
      "./src/**/*test.js"
    ],
    "failFast": true,
    "failWithoutAssertions": false,
    "babel": "inherit",
    "require": [
      "babel-register"
    ]
  },
  "devDependencies": {
    "autoprefixer": "8.2.0",
    "ava": "0.25.0",
    "babel-core": "6.26.0",
    "babel-eslint": "8.2.3",
    "babel-loader": "7.1.4",
    "babel-plugin-syntax-object-rest-spread": "6.13.0",
    "babel-plugin-transform-custom-element-classes": "0.1.0",
    "babel-plugin-transform-es2015-classes": "6.24.1",
    "babel-plugin-transform-runtime": "6.23.0",
    "babel-preset-env": "1.6.1",
    "babel-preset-flow": "6.23.0",
    "babel-register": "6.26.0",
    "chalk": "2.3.2",
    "copy-webpack-plugin": "4.5.1",
    "css-loader": "0.28.11",
    "eslint": "4.19.1",
    "eslint-config-airbnb-base": "12.1.0",
    "eslint-loader": "2.0.0",
    "eslint-plugin-flowtype": "2.46.1",
    "eslint-plugin-import": "2.11.0",
    "extract-text-webpack-plugin": "4.0.0-beta.0",
    "file-loader": "1.1.11",
    "flow-bin": "0.69.0",
    "fs-extra": "5.0.0",
    "html-loader": "0.5.5",
    "html-webpack-plugin": "3.2.0",
    "http-server": "0.11.1",
    "node-sass": "4.8.3",
    "nyc": "11.6.0",
    "offline-plugin": "4.9.0",
    "opn": "5.3.0",
    "ora": "2.0.0",
    "postcss-loader": "2.1.3",
    "resolve-url-loader": "2.3.0",
    "sass-loader": "7.0.1",
    "style-loader": "0.20.3",
    "stylelint": "9.2.0",
    "stylelint-config-standard": "18.2.0",
    "stylelint-webpack-plugin": "0.10.4",
    "url-loader": "1.0.1",
    "webpack": "4.5.0",
    "webpack-cli": "2.0.14",
    "webpack-dev-server": "3.1.3",
    "webpack-merge": "4.1.2"
  }
}
