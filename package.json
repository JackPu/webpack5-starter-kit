{
  "name": "webpack4-starter-kit",
  "version": "1.0.3",
  "description": "Webpack 4 starter kit",
  "main": "./src/index.js",
  "scripts": {
    "postinstall": "yarn run build",
    "dev": "node ./config/dev",
    "build": "node ./config/prod",
    "lint": "eslint ./src",
    "flow": "flow",
    "test": "nyc ava",
    "httpserver": "http-server ./dist -p 8082 --silent"
  },
  "author": "Giorgio Gamberoni <giorgio.gamberoni@gmail.com> (https://github.com/king-prawns)",
  "license": "MIT",
  "homepage": "https://github.com/king-prawns/webpack4-starter-kit#readme",
  "ava": {
    "files": [
      "./src/**/*test.js"
    ],
    "failFast": true,
    "failWithoutAssertions": false,
    "babel": "inherit",
    "require": [
      "babel-register"
    ]
  },
  "devDependencies": {
    "autoprefixer": "9.1.0",
    "ava": "0.25.0",
    "babel-core": "6.26.3",
    "babel-eslint": "8.2.6",
    "babel-loader": "7.1.5",
    "babel-plugin-syntax-object-rest-spread": "6.13.0",
    "babel-plugin-transform-custom-element-classes": "0.1.0",
    "babel-plugin-transform-es2015-classes": "6.24.1",
    "babel-plugin-transform-runtime": "6.23.0",
    "babel-preset-env": "1.7.0",
    "babel-preset-flow": "6.23.0",
    "babel-register": "6.26.0",
    "chalk": "2.4.1",
    "copy-webpack-plugin": "4.5.2",
    "css-loader": "1.0.0",
    "eslint": "5.3.0",
    "eslint-config-airbnb-base": "13.0.0",
    "eslint-loader": "2.1.0",
    "eslint-plugin-flowtype": "2.50.0",
    "eslint-plugin-import": "2.13.0",
    "extract-text-webpack-plugin": "4.0.0-beta.0",
    "file-loader": "1.1.11",
    "flow-bin": "0.78.0",
    "fs-extra": "7.0.0",
    "html-loader": "0.5.5",
    "html-webpack-plugin": "3.2.0",
    "http-server": "0.11.1",
    "node-sass": "4.9.3",
    "nyc": "12.0.2",
    "offline-plugin": "5.0.5",
    "opn": "5.3.0",
    "ora": "3.0.0",
    "postcss-loader": "3.0.0",
    "resolve-url-loader": "2.3.0",
    "sass-loader": "7.1.0",
    "style-loader": "0.22.1",
    "stylelint": "9.4.0",
    "stylelint-config-standard": "18.2.0",
    "stylelint-webpack-plugin": "0.10.5",
    "url-loader": "1.0.1",
    "webpack": "4.16.5",
    "webpack-cli": "3.1.0",
    "webpack-dev-server": "3.1.5",
    "webpack-merge": "4.1.4"
  },
  "dependencies": {
    "clean-webpack-plugin": "0.1.19"
  }
}
